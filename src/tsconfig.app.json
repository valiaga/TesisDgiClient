{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [
      "hammerjs"
    ],
    "paths": {
      "@dgi/*": [
        "./app/shared/dgi/*"
      ],
      "@env/*": [
        "./environments/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}