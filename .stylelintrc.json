{
    "extends": "stylelint-config-recommended",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "function",
            "if",
            "each",
            "include",
            "mixin",
            "content"
          ]
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^dgi-/",
            "/^mat-/"
          ]
        }
      ],
      "no-missing-end-of-source-newline": true,
      "string-no-newline": true,
      "string-quotes": "single"
    }
  }